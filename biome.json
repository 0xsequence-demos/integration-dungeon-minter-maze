{
  "$schema": "https://biomejs.dev/schemas/1.6.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off",
        "noAssignInExpressions":"off"
      },
      "style": {
        "noParameterAssign":"off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "always",
      "indentStyle": "space"
    }
  }
}